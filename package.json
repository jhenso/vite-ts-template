{
  "name": "vite-ts-template",
  "version": "1.0.0",
  "description": "Starter template for TS projects with Vite",
  "main": "src/index.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "preview": "vite preview",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhenso/vite-ts-template.git"
  },
  "keywords": [
    "vite",
    "typescript",
    "eslint",
    "prettier"
  ],
  "author": "John Henson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jhenso/vite-ts-template/issues"
  },
  "homepage": "https://github.com/jhenso/vite-ts-template#readme",
  "dependencies": {
    "vite": "^4.4.9"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.3",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
